{
  "name": "@capacitor-community/electron",
  "version": "5.0.1",
  "description": "Capacitor community support for the Electron platform!",
  "main": "dist/core/index.js",
  "typings": "dist/core/index.d.ts",
  "scripts": {
    "lint": "npx eslint . --ext ts && npx prettier \"./**/*.{css,html,ts,js,java}\" --check",
    "fmt": "npx eslint . --ext ts --fix && npx prettier \"./**/*.{css,html,ts,js,java}\" --write",
    "clean": "npx rimraf ./dist && npx rimraf ./template.tar.gz",
    "build": "npm run clean && npm run fmt && npm run build-platform && npm run build-platform-types",
    "capacitor:add": "node dist/cli-scripts/cap-scripts.js add",
    "capacitor:copy": "node dist/cli-scripts/cap-scripts.js copy",
    "capacitor:update": "node dist/cli-scripts/cap-scripts.js update",
    "capacitor:sync": "node dist/cli-scripts/cap-scripts.js sync",
    "capacitor:open": "node dist/cli-scripts/cap-scripts.js open",
    "build-platform": "node ./build.mjs",
    "build-platform-types": "tsc ./src/electron-platform/index.ts --outDir ./dist/core --declaration --emitDeclarationOnly --esModuleInterop",
    "shipit": "npx semantic-release && npm publish --tag latest --provenance",
    "shipit-next": "npx semantic-release && npm publish --tag next --provenance",
    "commit": "git add . && npx cz && git push"
  },
  "license": "MIT",
  "author": "IT-MikeS",
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.1",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/events": "^3.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^36.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "is-ci": "^3.0.1",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.0",
    "tar": "^6.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@capacitor/cli": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@ionic/utils-fs": "^3.1.7",
    "chalk": "^4.1.2",
    "electron-is-dev": "^3.0.1",
    "events": "^3.3.0",
    "fs-extra": "^11.2.0",
    "keyv": "^4.5.4",
    "mime-types": "^2.1.35",
    "ora": "^5.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/capacitor-community/electron"
  },
  "bugs": {
    "url": "https://github.com/capacitor-community/electron/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
